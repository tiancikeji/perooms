<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Roomdescription</th>
    <th>Ratecode</th>
    <th>Roomtypecode</th>
    <th>Hotel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.roomDescription %></td>
    <td><%= room.rateCode %></td>
    <td><%= room.roomTypeCode %></td>
    <td><%= room.hotel_id %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

